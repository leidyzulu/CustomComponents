<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/llMain"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <com.example.myapplication.textField.EditTextPhoneField
            android:layout_width="253dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvPhone"
            app:regex="@string/regex_phone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">


        <EditText
                android:layout_width="match_parent"
                android:hint="TelÃ©fono"
                android:digits="0123456789-"
                android:id="@+id/etPhone"
                android:layout_height="wrap_content"/>


    </com.example.myapplication.textField.EditTextPhoneField>


    <com.example.myapplication.textField.EditTextEmailField
            android:layout_width="253dp"
            android:layout_height="wrap_content"
            android:id="@+id/tlEmail"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">


        <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:hint="email"
                android:layout_height="wrap_content"/>


    </com.example.myapplication.textField.EditTextEmailField>


    <com.example.myapplication.textField.EditTextDateField
            android:layout_width="253dp"
            android:layout_height="wrap_content"
            android:id="@+id/tlDate"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">


        <EditText
                android:id="@+id/etDate"
                android:layout_width="match_parent"
                android:hint="email"
                android:layout_height="wrap_content"/>


    </com.example.myapplication.textField.EditTextDateField>

    <Button
            android:id="@+id/btnRun"
            android:layout_width="wrap_content"
            android:text="Run"
            android:layout_height="wrap_content"/>


</LinearLayout>
